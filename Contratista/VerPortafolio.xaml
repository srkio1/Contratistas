<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contratista.VerPortafolio"
             xmlns:syncfusion="clr-namespace:Syncfusion.SfRotator.XForms;assembly=Syncfusion.SfRotator.XForms"
             Title="Portafolio">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout>
                    <Label x:Name="TituloTxt" FontSize="Large" Text="casadegoku"/>
                </StackLayout>
                <StackLayout>
                    <syncfusion:SfRotator x:Name="rotator">

                        <syncfusion:SfRotator.ItemTemplate>
                            <DataTemplate>
                                <Image  Source="{Binding Image}"/>
                            </DataTemplate>


                        </syncfusion:SfRotator.ItemTemplate>

                    </syncfusion:SfRotator>
                </StackLayout>
                <StackLayout>
                    <Label x:Name="DescripcionTxt" FontSize="Medium" Text="casa de goku ubicada plan3000"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>